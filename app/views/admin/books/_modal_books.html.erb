<div id="exampleModalCenter" class="modal fade" tabindex="-1" aria-labelledby="exampleModalCenterTitle"
  style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="card user-card user-card-1">
        <div class="card-header border-0 p-2 pb-0">
          <div class="cover-img-block">
            <%= image_tag "bg-02.jpg", alt: "user", class: "img-fluid" %>
          </div>
        </div>
        <div class="card-body pt-0">
          <div class="user-about-block text-center">
            <div class="row align-items-end">
              <div class="col"></div>
              <div class="col">
                <%= image_tag "user/avatar.png", alt: "user", class: "img-radius img-fluid wid-102" %>
              </div>
              <div class="col"></div>
            </div>
          </div>
          <div class="text-center">
            <h6 class="mb-1 mt-3" id="user_name"></h6>
            <p class="mb-3 text-muted" id="user_email"></p></p>
            <p class="mb-1" id="user_des"></p>
          </div>
          <hr class="mx-auto wid-80 b-wid-3 my-4">
          <div class="row text-center">
            <div class="col">
              <h6 class="mb-1">37</h6>
              <p class="mb-0">
                <%= t "users.books" %>
              </p>
            </div>
            <div class="col">
              <h6 class="mb-1">2749</h6>
              <p class="mb-0">
                <%= t "users.books_cancel" %>
              </p>
            </div>
            <div class="col">
              <h6 class="mb-1">678</h6>
              <p class="mb-0">
                <%= t "users.like" %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= link_to t("users.activate"), "javascript:void(0)",
        class:"btn btn-primary", :data =>{:url=>""},id:"user_url" %>
        <button type="button" class="btn  btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
